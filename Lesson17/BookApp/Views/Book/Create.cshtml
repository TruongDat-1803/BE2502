@using BookApp.Models.Authors
@using BookApp.Models.Books
@using Microsoft.AspNetCore.Mvc.TagHelpers

@model List<AuthorViewModel>

@{
    ViewData["Title"] = "Create a Book";
}

<h1 class="bg-info text-white">Create a Book</h1>

<form method="post" action="/Book/Create">
    <div class="form-group">
        <label>Book Name</label>
        <input type="text" name="@nameof(CreateBookViewModel.Name)" class="form-control" />

    </div>
    <div class="form-group">
        <label>Choose the author</label>
        <select name="@nameof(CreateBookViewModel.AuthorId)">
            @foreach (var item in Model)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>